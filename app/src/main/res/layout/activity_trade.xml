<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trade"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrade1"
            android:layout_width="190dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrade2"
            android:layout_width="190dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent" />



    </LinearLayout>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="40sp"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <EditText
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="11407.31"
                android:layout_marginLeft="20dp"/>
            <EditText
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="4140.65"
                android:layout_marginLeft="10dp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="=11407.31 USD"
            android:layout_marginLeft="20sp"
            android:textColor="#808080"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="=4140.65 USD"
            android:layout_marginLeft="10dp"
            android:textColor="#808080"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:hint="Buy amount"
                    android:textColor="#808080" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="BTC" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="#808080"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="--USDT"
                    android:textColor="#808080"
                    android:layout_marginLeft="78dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#808080"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textAlignment="textEnd"
                    android:textColor="#808080"
                    android:layout_marginLeft="102dp"/>

            </LinearLayout>




        </LinearLayout>



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:hint="Sell amount"
                    android:textColor="#808080" />

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="BTC" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:text="25%" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available"
                    android:textColor="#808080"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="--BTC"
                    android:textColor="#808080"
                    android:layout_marginLeft="78dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="#808080"
                    android:layout_marginLeft="20sp"/>

                <TextView
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textAlignment="textEnd"
                    android:textColor="#808080"
                    android:layout_marginLeft="102dp"/>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in to trade"
        android:textColor="@color/whiteTextColor"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"/>






</LinearLayout>